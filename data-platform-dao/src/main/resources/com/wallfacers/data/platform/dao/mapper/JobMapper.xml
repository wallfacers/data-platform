<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wallfacers.data.platform.dao.mapper.JobMapper">

    <sql id="column">
        id, job_name, job_mode, job_code, create_time, modify_time, version, deleted
    </sql>

    <select id="findJobById" resultType="com.wallfacers.data.platform.dao.model.JobDO">
        SELECT
            <include refid="column" />
        FROM
            tp_job
        WHERE
            id = #{id}
    </select>

</mapper>